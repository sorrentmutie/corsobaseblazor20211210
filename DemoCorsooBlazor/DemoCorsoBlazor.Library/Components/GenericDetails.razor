@typeparam TItem

<EditForm Model="Current" OnValidSubmit="() => OnSave.InvokeAsync(Current)">
    <DataAnnotationsValidator/>
    @FormFields(Current)
    <button type="submit" class="btn btn-primary">Save</button>
    <button type="button" class="btn btn-primary" @onclick="() => OnCancel.InvokeAsync()">Cancel</button>
</EditForm>

@code {
    [Parameter]
    public TItem Current { get; set; } 

    [Parameter]
    public RenderFragment<TItem> FormFields { get; set; }

    [Parameter] 
    public EventCallback<TItem> OnSave { get; set; }

    [Parameter] 
    public EventCallback OnCancel { get; set; }
}
